{
  "variables": {
    "disk_size": "5000",
    "memory": "2048m",
    "cpus": "2",
    "headless": "true",
    "iso_url": "https://cdimage.debian.org/mirror/cdimage/stretch_di_rc4/multi-arch/iso-cd/debian-stretch-DI-rc4-amd64-i386-netinst.iso",
    "iso_checksum": "009198d66721681a3c0a42476c11dcfc63df4171f5e9a58aabea608f5a475598",
    "version": "{{ env `VERSION`}}"
  },
  "builders": [
    {
      "name": "qemu",
      "type": "qemu",
      "format": "raw",
      "headless": "{{ user `headless` }}",
      "accelerator": "kvm",
      "disk_interface": "virtio-scsi",
      "disk_size": "{{ user `disk_size` }}",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha256",
      "http_directory": ".",
      "ssh_username": "root",
      "ssh_password": "shell",
      "shutdown_command": "shutdown -h now",
      "ssh_wait_timeout": "60m",
      "boot_wait": "2s",
      "boot_command": [
        "<esc><wait>",
        "/install.amd/vmlinuz ",
        "initrd=/install.amd/initrd.gz ",
        "hostname=airgap ",
        "auto=true ",
        "priority=critical ",
        "interface=auto ",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/packer/preseed.cfg ",
        "<enter>"
      ],
      "qemuargs": [
        [ "-m", "{{ user `memory` }}" ],
        [ "-smp", "cpus={{ user `cpus`}}"]
      ],
      "output_directory": ".packer/build/"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "packer/setup.sh"
    },
    {
      "type": "file",
      "source": "scripts/",
      "destination": "/usr/local/bin/"
    },
    {
      "type": "file",
      "source": "packer/etc/",
      "destination": "/etc/"
    }

  ],
  "post-processors": [[
    {
      "compression_level": 6,
      "format": ".gz",
      "keep_input_artifact": false,
      "output": "dist/airgap-{{user `version`}}.raw.gz",
      "type": "compress"
    },
    {
      "type": "shell-local",
      "inline": [
        "ln -s airgrap-{{ user `version` }}.tar.gz dist/airgap-latest.raw.gz"
      ]
    }
  ]]
}
